<!doctype html>

<html>
  <head>
    <meta charset="utf-8">
    <title>Dynamic Template</title>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <h1 style="color:red;background-color:yellow;text-align:center;">Welcome to Dynamic Templates</h1>
    <h2>Multiply 3 * 3 = <%=3 * 3%></h2>
    <h2>A random number between 3 and 12 = <%= Math.floor(Math.random() * 10) + 3  %></h2>

    <%var a = 3, b = 2%>
    <p><%= a + b%></p>  

    <% if(a ===3) { %>
      <p> a is 3 </p>
    <%}else{ %>
      <p> a not 3 </p>
    <% } %>

    <% var colors = ['blue','green', 'orange', 'yellow', 'pink', 'red', 'purple'] %>
    <% for(var i = 0; i < colors.length; i++) { %>  <!--HTML, JavaScript-->
    <% var bg = (colors.length - 1) === i ? 0 : i+1 %>
    <% console.log(colors.length, i, bg) %>
    <% var fonts = ['Amatic SC', 'Oswald', 'Pacifico'] %>
    <p style="color: <%= colors[i] %>; font-size: <%= 12 + (i * 2) %>px; background-color: <%= colors[bg] %>; font-family: <%= fonts[i%3] %>;"> <%= colors[i] %> </p>   
    <% } %>

  </body>
</html>
